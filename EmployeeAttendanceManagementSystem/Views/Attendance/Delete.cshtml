@model Attendance

<div class="container">
    <div class="row pt-4 pb-3 px-0">
        <div class="col-6">
            <h2 class="text-dark">Delete Attendance</h2>
        </div>
    </div>
</div>
<form method="post" asp-controller="Attendance" asp-action="Delete">
    <div class="p-1">
        <div class="row mb-3 p-1">
            <label asp-for="AttendenceId" class="p-0"></label>
            <input asp-for="AttendenceId" readonly class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="EmployeeId" class="p-0"></label>
            <input asp-for="EmployeeId" readonly class="form-control" />
        </div>
        <div class="form-group row mb-3 p-1">
            <label asp-for="Date" class="p-0"></label>
            <input asp-for="Date" readonly class="form-control" />
        </div>
        <div class="form-group row mb-3 p-1">
            <label asp-for="CheckInTime" class="p-0"></label>
            <input asp-for="CheckInTime" readonly class="form-control" />
        </div>
        <div class="form-group row mb-3 p-1">
            <label asp-for="CheckOutTime" class="p-0"></label>
            <input asp-for="CheckOutTime" readonly class="form-control" />
        </div>

    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Attendance" asp-action="Index" class="btn btn-outline-secondary border form-control">
                Back To List
            </a>
        </div>
    </div>
</form>