@model Attendance

<div class="container">
    <div class="row pt-4 pb-3 px-0">
        <div class="col-6">
            <h2 class="text-dark">Edit Attendance</h2>
        </div>
    </div>
</div>
<form method="post" asp-controller="Attendance" asp-action="Edit">
    <div class="p-1">
        <div class="form-group row mb-3 p-1">
            <input asp-for="AttendenceId" type="hidden" />
        </div>
        <div class="form-group row mb-3 p-1">
            <label asp-for="EmployeeId" class="p-0"></label>
            <input asp-for="EmployeeId" class="form-control" />
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
        <div class="form-group row mb-3 p-1">
            <label asp-for="Date" class="p-0"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group row mb-3 p-1">
            <label asp-for="CheckInTime" class="p-0"></label>
            <input asp-for="CheckInTime" class="form-control" />
            <span asp-validation-for="CheckInTime" class="text-danger"></span>
        </div>
        <div class="form-group row mb-3 p-1">
            <label asp-for="CheckOutTime" class="p-0"></label>
            <input asp-for="CheckOutTime" class="form-control" />
            <span asp-validation-for="CheckOutTime" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Edit</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Attendance" asp-action="Index" class="btn btn-outline-secondary border form-control">
                Back To List
            </a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}