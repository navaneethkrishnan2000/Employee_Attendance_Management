@model Attendance
<div class="container">
    <div class="row pt-4 pb-3 ">
        <div class="row pb-2">
            <h2 class="text-dark">Add Attendance</h2>
        </div>
    </div>
</div>
<form method="post" asp-controller="Attendance" asp-action="Create">
    <div class="p-1">

        <div class="form-group row mb-3 p-1">
            <label asp-for="EmployeeId" class="p-0"></label>
            @*<input asp-for="EmployeeId" class="form-control" /> *@
            <select asp-for="EmployeeId" class="form-control">
                <option value="">-- Select Employee --</option>
                @foreach (var employee in ViewBag.EmployeeList)
                {
                    <option value="@employee.Id">@employee.Id - @employee.Name</option>
                }
            </select>
            <span asp-validation-for="EmployeeId" class="text-danger p-0"></span>
        </div>

        <div class="form-group row mb-3 p-1">
            <label asp-for="Date" class="p-0"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger p-0"></span>
        </div>

        <div class="form-group row mb-3 p-1">
            <label asp-for="CheckInTime" class="p-0"></label>
            <input asp-for="CheckInTime" class="form-control" />
            <span asp-validation-for="CheckInTime" class="text-danger p-0"></span>
        </div>

        <div class="form-group row mb-3 p-1">
            <label asp-for="CheckOutTime" class="p-0"></label>
            <input asp-for="CheckOutTime" class="form-control" />
            <span asp-validation-for="CheckOutTime" class="text-danger p-0"></span>
        </div>

    </div>
    <div class="row">

        <div class="col-6 col-md-3">

            <button type="submit" class="btn btn-primary form-control">Add</button>

        </div>
        <div class="col-6 col-md-3">

            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary border form-control">
                Back To List
            </a>

        </div>

    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}