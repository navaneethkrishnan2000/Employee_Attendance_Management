@model Employee

<div class="container">
    <div class="row pt-4 pb-3 px-0">
        <div class="col-6">
            <h2 class="text-dark">Delete Employee</h2>
        </div>
    </div>
</div>
<form method="post" asp-controller="Employee" asp-action="Delete">
    <div class="p-1">
        <div class="row mb-3 p-1">
            <label asp-for="Id" class="p-0"></label>
            <input asp-for="Id" readonly class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" readonly class="form-control" />
        </div>
        <div class="form-group row mb-3 p-1">
            <label asp-for="Email" class="p-0"></label>
            <input asp-for="Email" readonly class="form-control" />
        </div>
        <div class="form-group row mb-3 p-1">
            <label asp-for="Department" class="p-0"></label>
            <input asp-for="Department" readonly class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary border form-control">
                Back To List
            </a>
        </div>
    </div>
</form> 