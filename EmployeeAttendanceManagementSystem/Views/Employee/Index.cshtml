@model List<Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-dark">Employee List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employeeObj in Model.OrderBy(e => e.Id))
            {
                <tr>
                    <td>@employeeObj.Id</td>
                    <td>@employeeObj.Name</td>
                    <td>@employeeObj.Email</td>
                    <td>@employeeObj.Department</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employeeObj.Id" class="btn btn-outline-warning">Edit</a>
                            
                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employeeObj.Id" class="btn btn-outline-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
