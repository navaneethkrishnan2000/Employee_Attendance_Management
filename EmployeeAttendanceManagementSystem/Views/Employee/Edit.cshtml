@model Employee

<div class="container">
    <div class="row pt-4 pb-3 px-0">
        <div class="col-6">
            <h2 class="text-dark">Edit Employee</h2>
        </div>
    </div>
</div>
<form method="post" asp-controller="Employee" asp-action="Edit">
    <div class="p-1">
        <div class="form-group row mb-3 p-1">
            <input asp-for="Id" type="hidden" />
        </div>
        <div class="form-group row mb-3 p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row mb-3 p-1">
            <label asp-for="Email" class="p-0"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row mb-3 p-1">
            <label asp-for="Department" class="p-0"></label>
            <input asp-for="Department" class="form-control" />
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Edit</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary border form-control">
                Back To List
            </a>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}